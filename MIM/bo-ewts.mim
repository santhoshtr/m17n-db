  ("rb" "རྦ")
  ("rm" "རྨ")
  ("rts" "རྩ")
  ("rdz" "རྫ")
  ("lk" "ལྐ")
  ("lg" "ལྒ")
  ("lng" "ལྔ")
  ("lc" "ལྕ")
  ("lj" "ལྗ")
  ("lt" "ལྟ")
  ("ld" "སྡ")
  ("lp" "ལྤ")
  ("lb" "ལྦ")
  ("lh" "ལྷ")
  ("sk" "སྐ")
  ("sg" "སྒ")
  ("sng" "སྔ")
  ("sny" "སྙ")
  ("st" "སྟ")
  ("sd" "སྡ")
  ("sn" "སྣ")
